#!/usr/bin/perl

use warnings;
use strict;
use Mojolicious::Lite;
use File::Slurp;

get '/' => sub {
	my $self = shift;
	my $code = read_file($0);
	$self->stash('code' => $code);
	$self->render(template => 'showform');
};

post '/' => sub {
	my $self = shift;

	my $code = $self->param('code');
	$code =~ s/\r$//gm;
	write_file($0, { binmode => ':utf8', atomic => 1 }, $code);
	$self->redirect_to('/');

};


app->start;
__DATA__

